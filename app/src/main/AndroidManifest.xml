<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tatait.tata_video">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 网络访问 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- setting写入时需要权限 -->
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <!-- bugly集成-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />

    <application
        android:name="com.tatait.tata_video.AppManager"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.tatait.tata_video.SpalshActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.tatait.tata_video.home.HomeActivity" />
        <activity
            android:name="com.tatait.tata_video.home.AboutActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.tatait.tata_video.GuideActivity" />
        <activity android:name="com.tatait.tata_video.detail.DetailListActivity" />
        <activity android:name="com.tatait.tata_video.detail.AlbumDetailActivity" />
        <activity
            android:name="com.tatait.tata_video.player.PlayActivity"
            android:screenOrientation="landscape" />
        <activity android:name="com.tatait.tata_video.live.LiveActivity" />
        <activity android:name="com.tatait.tata_video.favorite.FavoriteActivity" />
        <activity android:name="com.tatait.tata_video.history.HistoryActivity" />
        <activity android:name="com.tatait.tata_video.blog.BlogActivity" />

    </application>

</manifest>